# DDream Frontend Environment Variables
# Copy this file to .env.local and fill in your values

# Network Configuration
NEXT_PUBLIC_NETWORK=testnet
NEXT_PUBLIC_RPC_URL=https://rpc.xion-testnet-2.burnt.com:443
NEXT_PUBLIC_REST_URL=https://api.xion-testnet-2.burnt.com

# Contract Addresses
# Controller contract deployed on XION testnet
NEXT_PUBLIC_CONTROLLER_ADDRESS=

# Registry contract that creates proxy accounts for users
NEXT_PUBLIC_REGISTRY_ADDRESS=

# Treasury contract for gasless transactions (optional)
# Deploy using instructions in TREASURY_SETUP.md
NEXT_PUBLIC_TREASURY_ADDRESS=

# App Configuration
NEXT_PUBLIC_APP_NAME=DDream Protocol
NEXT_PUBLIC_APP_DESCRIPTION=Decentralized Gaming on XION

# Feature Flags (optional)
NEXT_PUBLIC_ENABLE_GASLESS=true
NEXT_PUBLIC_ENABLE_TRADING=true
NEXT_PUBLIC_ENABLE_STAKING=true